<%= render 'books/list', user:@user, book:@book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image %><br>
              <%= link_to @user.name,user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title,book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" do %>
                Destroy
              <% end %>
            </td>

            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
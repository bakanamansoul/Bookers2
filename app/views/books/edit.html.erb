<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <% if @book.errors.any? %>
         <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
         <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
         <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @book do |f| %>
        <laabel for="inputTitle">Title</laabel><br>
        <%= f.text_field :title, autofocus:true, id:"inputTitle"%><br>
        <label for="inputBody">Opinion</label><br>
        <%= f.text_area :body, autofocus:true, id:"inputBody"%><br>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      
      <p>
        <%= link_to "Show", book_path %>
        |
        <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>
<h2>User info</h2>

<table>
  <tbody>
    <td><%= image_tag @user.get_profile_image,size: '100x100' %></td>
    <td>name<%= @user.name %></td>
    <td>introduction<%= @user.introduction %></td>
  </tbody>
</table>




<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>



<h2>Books</h2>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><% book.body %></td>
    </tr>
  </tbody>
</table>
</div>
</div>
